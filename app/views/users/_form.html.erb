<%= form_for @user, controller: 'users', action: 'create' do |f| %>
    
    <%= f.label :name %>
    <%= f.text_input :name %>

    <%= f.label :password %>
    <%= f.text_input :password %>

    <%= f.label :password_confirmation %>
    <%= f.text_input :password_confirmation %>

    <%= f.submit 'Create User' %>

<% end %>